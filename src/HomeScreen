        />
      </View>


      <TouchableOpacity style={styles.inputContainer}>
        <Text style={styles.input}>SEARCH SYMPTOMS</Text>
      </TouchableOpacity>

      <TouchableOpacity style={styles.inputContainer}>
        <Text style={styles.input}>SEARCH HERBS</Text>
      </TouchableOpacity>

      <TouchableOpacity style={styles.inputContainer}>
        <Text style={styles.input}>VIEW  EXPERTS</Text>
      </TouchableOpacity>

      </ImageBackground>
    );
  }
}

